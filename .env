# ---- SQLite ----
# Relative paths resolve from current working directory.
SQLITE_DB_PATH=data/lifeos.db

# ---- MCP runtime ----
# auto|stdio|http
MCP_TRANSPORT=auto
MCP_HOST=0.0.0.0
MCP_PORT=8000

# If set, auto mode uses HTTP
PORT=

# ---- Health endpoint for STDIO mode ----
HEALTH_ENABLED=false
HEALTH_PORT=8080

# ---- Filesystem tool allowlist ----
# Comma-separated absolute or relative paths
ALLOWED_BASE_PATHS=.
FILE_SEARCH_DEFAULT_LIMIT=50
FILE_SEARCH_MAX_LIMIT=200
FILE_LIST_MAX_LIMIT=500
FILE_READ_MAX_BYTES=200000

# ---- Logging ----
LOG_LEVEL=INFO
